<Page x:Class="SchoolGUI.TeacherStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="1280"
      Title="TeacherStudentsPage">

    <Grid>
        <StackPanel>
            <ScrollViewer Height="340" Width="1280" BorderBrush="#FF0D7C75">
                <ScrollViewer.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF31C3BA" Offset="0"/>
                        <GradientStop Color="#FF39FEF2" Offset="1"/>
                    </LinearGradientBrush>
                </ScrollViewer.Background>

                <StackPanel x:Name="teacherstudentspage_students_stackpanel" Orientation="Vertical" HorizontalAlignment="Center">

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
